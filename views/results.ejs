<% include ./partials/header %>
    <h1>list of tickets</h1>
    <ul class="list-group">
        <% tickets.forEach(function(ticket) { %>
        <li class="list-group-item"><a href="/results/<%= ticket['id'] %>">
            <%= ticket['id'] %>
            <%= ticket['status'] %>
            <%= ticket['subject'] %>
        </a></li>
        <% }) %>
    </ul>

    <% if (pageCount > 1) { %>
        <ul class="pagination">
            <% if (currentPage > 1) { %>
                <li><a href="/results/?page=1">&laquo; </a> </li>
            <% } %>

            <% var i = 1; %>
            <%if (currentPage > 5) { %>
                <% i = currentPage %>
                <% i = i - 4; %>
            <% } %>

            <% if (i !== 1) { %>
                <li class="disabled"><a href="#">…</a></li>
            <% } %>

            <% for (i; i <= pageCount; i++) { %>
                <% if (currentPage == i) { %>
                    <li class="active"><span>
                        <%= i %> <span class="sr-only">(current)</span></span></li>
                <%} else { %>
                    <li><a href="/results/?page=<%= i %>"><%= i %></a></li>
                <% } %>

                <% if (i == (+currentPage + 4)) { %>
                    <li class="disabled"><a href="#">…</a></li>
                    <% break; %>
                <% } %>
            <% } %>

            <% if (currentPage != pageCount) { %>
                <li><a href="/results/?page= <%=pageCount %>">&raquo;</a></li>
            <% } %>
        </ul>
        <% } %>
<% include ./partials/footer %>